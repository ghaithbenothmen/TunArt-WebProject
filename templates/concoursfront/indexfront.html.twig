{% extends 'base.html.twig' %}

{% block title %}Concours index{% endblock %}

{% block body %}
    <h1>Concours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Refrence</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Lien</th>
                <th>Nombre des participants</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concour in concours  %}
            <tr>
                <td>{{ concour.refrence }}</td>
                <td>{{ concour.nom }}</td>
                <td>{{ concour.date ? concour.date|date('Y-m-d') : '' }}</td>
                <td>{{ concour.type }}</td>
                <td>{{ concour.prix }}</td>
                <td>{{ concour.lien }}</td>
                <td class="participant-count {{ concour.Nparticipant <= concour.Maxparticipant ? 'full' : '' }}">
                {{ concour.Nparticipant }} / {{ concour.Maxparticipant }}
                </td>
                <td>
                    <a href="{{ path('app_concoursfront_participate', {'refrence': concour.refrence})}}">Participate</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {#
<div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
    #}
{% endblock %}
