    <table class="table">
        <thead>
            <tr>
                <th>Code de votre inscription</th>
                <th>Nom du concour</th>
                <th>Date de l'inscription</th>
                <th>Date du concour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidature in candidature %}
            <tr>
                <td>
                <a href="#">{{ candidature.idCandidature }}</a>
                </td>
                <td>
                <a href="#">{{ candidature.idConcours.nom }}</a>
                </td>
                <td>{{ candidature.date ? candidature.date|date('Y-m-d') : '' }}</td>
                <td>{{ candidature.idConcours.date ? candidature.idConcours.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="#">show</a>
                </td>
            </tr>
