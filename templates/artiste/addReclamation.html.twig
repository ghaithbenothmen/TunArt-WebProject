{% extends 'artiste-dash.html.twig' %}

{% block title %}Dashboard artiste

{% endblock %}

{% block body %}
	<div class="page-breadcrumb">
		<div class="row">
			<div class="col-7 align-self-center">
				<h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Ajouter reclamation</h4>
				<div class="d-flex align-items-center">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb m-0 p-0">
							<li class="breadcrumb-item">
								<a href="index.html" class="text-muted">Artiste</a>
							</li>
							<li class="breadcrumb-item text-muted active" aria-current="page">Ajouter reclamation</li>
						</ol>
					</nav>
				</div>
			</div>

			<div class="col-5 align-self-center">
				<div class="customize-input float-right">
					<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
						Ajouter Reclamation
					</button>
				</div>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Ajouter Reclamation</h4>
							{{ form_start(f) }}
							<div class="mb-3">
								{{ form_label(f.type, "Type reclamation:", {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(f.type, {'attr': {'class': 'form-control','placeholder': 'Entré type de la reclamation'}}) }}
								
                                {{ form_label(f.text, "Type reclamation:", {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(f.text, {'attr': {'class': 'form-control','placeholder': 'Entré type de la reclamation'}}) }}
							</div>
							<div class="form-group">
								{{ form_widget(f.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
							</div>
							{{ form_end(f) }}
							
					
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}