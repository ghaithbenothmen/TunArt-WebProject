{# templates/user/user_Card.html.twig #}

{% extends 'artiste-dash.html.twig' %}

{% block title %}Update User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #eee;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 25px;
        }
        .btn-primary,
        .btn-danger {
            width: 48%;
            margin-right: 4%;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
        .user-image {
            width: 200px;
            height: 200px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        hr {
            border-color: #ddd;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4 text-center">Update User</h1>
        <div class="row">
            <div class="col-md-6 text-center">
                <h3 class="mb-3">User Image</h3>
                {% if user.image is not null %}
                    <img src="{{ asset('uploads/images/' ~ user.image) }}" alt="User Image" class="user-image">
                {% else %}
                    <p>No image available</p>
                {% endif %}
            </div>
            <div class="col-md-6">
                {{ form_start(registration_form) }}
                    <div class="form-group">
                        {{ form_row(registration_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.roles, {'attr': {'class': 'form-control', 'placeholder': 'Role'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.image, {'attr': {'class': 'form-control', 'placeholder': 'Upload Image'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                    <a href="{{ path('delete_user', {'id': user.id}) }}" onclick="return confirm('Are you sure you want to delete this user?');" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                {{ form_end(registration_form) }}
            </div>
        </div>
    </div>
{% endblock %}
