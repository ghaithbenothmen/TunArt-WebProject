{# templates/user/user_Card.html.twig #}

{% extends 'artiste-dash.html.twig' %}

{% block title %}Update User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-primary,
        .btn-success {
            width: 100%;
        }
        .user-image {
            width: 200px;
            height: 200px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        hr {
            border-color: #ddd;
        }
      
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4 text-center">Update User</h1>
        <div class="row">
            <div class="col-md-6 text-center">
                <h3 class="mb-3">User Image</h3>
                {% if user.image is not null %}
                    <img src="{{ asset('uploads/' ~ user.image) }}" style='width:400px' alt="User Image" class="user-image">
                {% else %}
                    <p>No image available</p>
                {% endif %}
            </div>
            <div class="col-md-6">
                {{ form_start(registration_form) }}
                    <div class="form-group">
                        {{ form_row(registration_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_row(registration_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.roles, {'attr': {'class': 'form-control', 'placeholder': 'Role'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registration_form.image, {'attr': {'class': 'form-control', 'placeholder': 'Upload Image'}}) }}
                    </div>
                    <form action="{{ path('update_user', {'id': user.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to update this user?');">
                      {{ form_start(registration_form) }}
                      {{ form_widget(registration_form) }}
                      <button type="submit" class="btn btn-submit">Submit</button>
                      {{ form_end(registration_form) }}
                      <form method="POST" action="{{ path('delete_userByUser', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                      <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                  

                   

                    
              </form>
            </div>
        </div>
    </div>
{% endblock %}