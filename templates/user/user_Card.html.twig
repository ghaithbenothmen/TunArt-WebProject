{# templates/user/user_Card.html.twig #}

{% extends 'artiste-dash.html.twig' %}

{% block title %}Update User{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    ... (your styles)
  </style>
{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="mb-4 text-center">Update User</h1>
    <div class="row">
      <div class="col-md-6 text-center">
        <h3>User Image</h3>
        {% if user.image is not null %}
          <img src="{{ asset('uploads/images/' ~ user.image) }}" alt="User Image" class="user-image">
        {% else %}
          <p>No image available</p>
        {% endif %}
      </div>
      <div class="col-md-6">
        {{ form_start(registration_form) }}
          <div class="form-group">
            {{ form_row(registration_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
          </div>
          <button href="{{ path('update_user', {'id': user.id}) }} type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to save?');">
            <i class="fas fa-save"></i> Save
          </button>
        {{ form_end(registration_form) }}

        <form action="{{ path('delete_userByUser', {'id': user.id}) }}" method="post" onsubmit="confirm('Are you sure you want to delete this user?')">
          <input type="hidden" name="_token" value="{{ csrf_token('delete_userByUser' ~ user.id) }}">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}