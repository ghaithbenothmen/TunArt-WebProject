{% extends 'base.html.twig' %}

{% block title %}Code{% endblock %}

{% block hero %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card mt-5">
                    <div class="card-body">
                        <div class="row justify-content-center mb-4">
                            <img src="{{ asset('img/logo.png') }}" alt="Logo" class="img-fluid w-50">
                        </div>
                        <h1 class="text-center mb-4">Vérification de Code</h1>

                        {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_label(form.code, 'Code') }}
                            {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-outline-secondary btn-sm" style="background-color: #ee568e;">Vérifier</button>
                        </div>

                        

                        {{ form_end(form) }}

                        {% for flash_message in app.flashes('error') %}
                            <div class="alert alert-danger mt-3">{{ flash_message }}</div>
                        {% endfor %}
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


