{% extends 'base.html.twig' %}

{% block title %}Information sur l'oeuvre{% endblock %}

{% block body %}    
<div class="container h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h1 class="text-center mb-4">Votre QR Code</h1>
                            <p class="text-center text-muted mb-4">Scanner pour voir les informations sur l'oeuvre !</p>
                            <div class="d-flex justify-content-center">
                                <img src="{{ qrCodeImage }}" alt="QR Code" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
