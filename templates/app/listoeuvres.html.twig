		.modal-header {
			background-color: #007bff;
			color: #fff;
			border-bottom: 1px solid #dee2e6;
			padding: 15px;
		}

		/* Modal Body */
		.modal-body {
			font-size: 16px;
			line-height: 1.6;
			padding: 20px;
		}

		/* Modal Footer */
		.modal-footer {
			border-top: 1px solid #dee2e6;
			padding: 15px;
		}
		.pagination {
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.pagination a {
			color: black;
			padding: 8px 12px;
			text-decoration: none;
			transition: background-color 0.3s;
			margin: 0 4px;
			border-radius: 4px;
			border: 1px solid #ddd;
		}

		.pagination a.active,
		.pagination a:hover {
			background-color: #f1f1f1;
		}

		.pagination span.current {
			background-color: #5f76e8;
			color: white;
			padding: 8px 12px;
			border-radius: 4px;
			margin: 0 4px;
		}

		.pagination a.disabled {
			color: #ddd;
			pointer-events: none;
		}

		.card {
			background-color: #fff;
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			transition: transform 0.3s ease;
		}

		.card:hover {
			transform: translateY(-5px);
		}

		.card img {
			width: 100%;
			height: 200px;
			object-fit: cover;
			border-top-left-radius: 10px;
			border-top-right-radius: 10px;
		}

		.card .card-body {
			padding: 20px;
		}

		.card h5 {
			font-size: 18px;
			font-weight: bold;
			margin-bottom: 10px;
		}

		.card p {
			font-size: 14px;
			color: #666;
		}
